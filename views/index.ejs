<%- include('./partials/header.ejs'); %>

<div id="login-container">
  <div id="left-column"></div>
  <div id="branding">
    <img src="./images/logo.png" />
    <h1>Login - Chat Now</h1>
  </div>
  <div id="login-form">
    <form method="post" action="/">
      <input
        type="text"
        name="username"
        placeholder="enter username or email or mobile"
        value="<%= data.username %>"
      />
      <% if (errors.username) { %>
      <p class="error show"><%= errors.username.msg %></p>
      <% } %>
      <input type="password" name="password" placeholder="enter password" />
      <% if (errors.password) { %>
      <p class="error show"><%= errors.password.msg %></p>
      <% } %> <% if (errors.common) { %>
      <p class="error show"><%= errors.common.msg %></p>
      <% } %>
      <input type="submit" value="Login" />
    </form>
    <!-- Replace the existing link paragraph with this -->
    <div class="auth-links">
      <p>Don't have an account? <a href="/register">Register here</a></p>
    </div>
  </div>
</div>
